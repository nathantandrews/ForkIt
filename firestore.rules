rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - anyone authenticated can read profiles, but only owners can write
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // Sessions collection
    match /sessions/{sessionId} {
      // Anyone authenticated can read any session (needed for joining)
      allow read: if isAuthenticated();
      
      // Anyone authenticated can create a session
      allow create: if isAuthenticated();
      
      // Only host or members can update a session
      // Also allow users to add themselves to memberUids when joining
      allow update: if isAuthenticated() && (
        resource.data.hostUid == request.auth.uid ||
        request.auth.uid in resource.data.memberUids ||
        (request.auth.uid in request.resource.data.memberUids && !(request.auth.uid in resource.data.memberUids))
      );
      
      // Only host can delete a session
      allow delete: if isAuthenticated() && resource.data.hostUid == request.auth.uid;
      
      // Members subcollection - anyone authenticated can read/write
      // (needed for joining sessions and viewing members)
      match /members/{memberId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated();
      }
      
      // Votes subcollection - anyone authenticated can read/write
      match /votes/{voteId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated();
      }
    }
  }
}